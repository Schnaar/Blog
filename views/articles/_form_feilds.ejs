<div class="form-group">
    <label for="title">title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control"><!--setting intial value to the article that was passed in-->
    
</div>
<div class="form-group">
    <label for="description">description</label>
    <textarea required value="<%= article.description>" type="description" name="description" id="description" class="form-control"></textarea>
    
</div>
<div class="form-group">
    <label for="markdown">markdown</label>
    <textarea required value="<%= article.markdown %>" type="markdown" name="markdown" id="markdown" class="form-control"></textarea>
    
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
